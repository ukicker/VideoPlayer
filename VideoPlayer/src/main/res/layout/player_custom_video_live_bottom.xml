<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/ll_bottom_menu_safe"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="bottom"
        android:background="@drawable/player_ui_bottom_bg"
        android:orientation="vertical" />

    <LinearLayout
        android:id="@+id/ll_bottom_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_portrait_container"
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:layout_gravity="bottom"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="6dp"
            android:gravity="center_vertical"
            android:visibility="visible">

            <ImageView
                android:id="@+id/iv_portrait_play"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/selector_bot_play_button"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/iv_portrait_refresh"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="15dp"

                android:src="@drawable/icon_action_refresh"
                android:visibility="gone" />

            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/iv_portrait_full"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginEnd="10dp"
                android:src="@mipmap/player_ic_full" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/rl_landscape_container"
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:layout_gravity="bottom"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginBottom="6dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="gone">

            <ImageView
                android:id="@+id/iv_landscape_play"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/selector_bot_play_button"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/iv_landscape_refresh"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="15dp"
                android:src="@drawable/icon_action_refresh"
                android:visibility="gone" />

            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/iv_landscape_tiny"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginEnd="25dp"
                android:src="@mipmap/player_ic_tiny"
                android:visibility="visible" />


            <TextView
                android:id="@+id/tv_landscape_quality"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="13dp"
                android:includeFontPadding="false"
                android:text="@string/player_default_quality"
                android:textColor="@android:color/white"
                android:textSize="14sp" />
        </LinearLayout>

    </LinearLayout>


</FrameLayout>