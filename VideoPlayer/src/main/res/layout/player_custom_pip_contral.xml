<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/player_control_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_close"
        android:layout_width="29dp"
        android:layout_height="22dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/player_float_btn_bg"
        android:src="@mipmap/player_close" />

    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="29dp"
        android:layout_height="22dp"
        android:layout_gravity="right"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/player_float_btn_bg"
        android:src="@mipmap/player_tiny_back"
        tools:ignore="RtlHardcoded" />

    <ImageView
        android:id="@+id/iv_play"
        android:layout_width="37dp"
        android:layout_height="37dp"
        android:layout_gravity="center"
        android:background="@drawable/player_tiny_play_bg"
        android:padding="7dp"
        android:src="@drawable/selector_bot_play_button" />

</FrameLayout>